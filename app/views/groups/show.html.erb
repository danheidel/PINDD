<div class="show-group">
	<h3>
  		<strong>Group Name:</strong>
  		<br><%= @group.name %>
	</h3>

	<h4>
  		<strong>Group Members:</strong>
  			<ul>
  			<% @group.users.each do |u| %>
    			<li><%= u.email %></li>
  			<% end %>
  			</ul>
	</h4>
	<%= link_to 'Edit', edit_group_path(@group) %> |
	<%= link_to 'Back to Groups', groups_path %>
</div>

<%= render @group.notes.order(:id), :as => :note %>

